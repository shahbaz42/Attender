<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mark Your attendance</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>

    <div class="attendance-cards-wrapper">
      
      <% list.forEach(element => { %>
        <div class="student-card" id="<%= element.rollNo %>">
          <h2 class="student-name"><%= element.name %> </h2>
          <div class="buttons">
            <button class="btn btn-outline-primary" onclick="markPresent('<%= element.rollNo %>')" >Present</button>
            <Button class="btn btn-outline-danger" onclick="markAbsent('<%= element.rollNo %>')">Absent</Button>
          </div>
        </div>
      <% }) %>
    </div>

    <script>
      
      function markPresent(rollNo){
        document.getElementById(rollNo).style.display = "none"
      }
      function markAbsent(rollNo){
        document.getElementById(rollNo).style.display = "none"
      }
    </script>
  </body>
</html>
